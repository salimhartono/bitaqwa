<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Praktik Buat Contraint Layout"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="30dp"
        android:textStyle="bold"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fulan 9A"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@id/tv_kelas"
        app:layout_constraintTop_toBottomOf="@id/tv_kelas"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_kelas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kelas : 9A"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/tv_alamat"
        app:layout_constraintLeft_toLeftOf="@id/tv_kamar" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_kamar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="Kamar 4.2"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_desc"

        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_alamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jongol, Bogo"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@id/tv_kamar"
        app:layout_constraintTop_toBottomOf="@id/tv_kamar" />

</androidx.constraintlayout.widget.ConstraintLayout>